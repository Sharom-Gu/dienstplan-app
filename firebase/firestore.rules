rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Users collection
    match /users/{userId} {
      // Anyone authenticated can read user data
      allow read: if isAuthenticated();
      // Users can write their own data, admins can write any user data
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow delete: if isAdmin();
    }

    // Shifts collection
    match /shifts/{shiftId} {
      // Anyone authenticated can read shifts
      allow read: if isAuthenticated();
      // Only admins can create, update, or delete shifts
      allow create, update, delete: if isAdmin();
    }

    // Bookings collection
    match /bookings/{bookingId} {
      // Anyone authenticated can read bookings
      allow read: if isAuthenticated();
      // Users can create their own bookings
      allow create: if isAuthenticated() &&
        request.resource.data.userId == request.auth.uid;
      // Users can update their own bookings, admins can update any
      allow update: if isAuthenticated() &&
        (resource.data.userId == request.auth.uid || isAdmin());
      // Only admins can delete bookings
      allow delete: if isAdmin();
    }

    // Requests collection
    match /requests/{requestId} {
      // Anyone authenticated can read requests
      allow read: if isAuthenticated();
      // Users can create their own requests
      allow create: if isAuthenticated() &&
        request.resource.data.requesterId == request.auth.uid;
      // Only admins can update requests (approve/reject)
      allow update: if isAdmin();
      // Only admins can delete requests
      allow delete: if isAdmin();
    }

    // Audit logs collection
    match /auditLogs/{logId} {
      // Only admins can read audit logs
      allow read: if isAdmin();
      // Any authenticated user can create audit log entries
      allow create: if isAuthenticated();
      // No one can update or delete audit logs
      allow update, delete: if false;
    }

    // Vacations collection (Urlaub & Krankheit)
    match /vacations/{vacationId} {
      // Anyone authenticated can read vacations (for calendar view)
      allow read: if isAuthenticated();
      // Users can create their own vacation/sick day entries
      allow create: if isAuthenticated() &&
        (request.resource.data.userId == request.auth.uid || isAdmin());
      // Users can update their own entries, admins can update any
      allow update: if isAuthenticated() &&
        (resource.data.userId == request.auth.uid || isAdmin());
      // Users can delete their own entries, admins can delete any
      allow delete: if isAuthenticated() &&
        (resource.data.userId == request.auth.uid || isAdmin());
    }

    // Invitations collection (Einladungslinks)
    match /invitations/{invitationId} {
      // Anyone can read invitations (needed for token validation before login)
      allow read: if true;
      // Only admins can create invitations
      allow create: if isAdmin();
      // Anyone can update (to mark as used after registration)
      allow update: if true;
      // Only admins can delete invitations
      allow delete: if isAdmin();
    }

    // Hour exceptions collection (Stundenausnahmen)
    match /hourExceptions/{exceptionId} {
      // Anyone authenticated can read (needed to check limits)
      allow read: if isAuthenticated();
      // Only admins can create, update, delete
      allow create, update, delete: if isAdmin();
    }

    // Sent reminders collection (Duplikat-Schutz fuer Teams-Erinnerungen)
    match /sentReminders/{reminderId} {
      // Only admins can read and create reminders
      allow read, create: if isAdmin();
      // No one can update or delete reminders
      allow update, delete: if false;
    }
  }
}
